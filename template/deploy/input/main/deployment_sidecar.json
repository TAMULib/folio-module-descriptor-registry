{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "{global:app}",
      "app.kubernetes.io/name": "{name:}",
      "app.kubernetes.io/instance": "{id:}",
      "app.kubernetes.io/part-of": "FOLIO",
      "app.kubernetes.io/version": "{version:}",
      "environment": "scratch"
    },
    "name": "{name:}",
    "namespace": "{global:namespace}"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "{global:app}",
        "app.kubernetes.io/name": "{name:}",
        "app.kubernetes.io/part-of": "FOLIO",
        "environment": "scratch"
      }
    },
    "strategy": {
      "type": "RollingUpdate"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "{global:app}",
          "app.kubernetes.io/name": "{name:}",
          "app.kubernetes.io/instance": "{id:}",
          "app.kubernetes.io/part-of": "FOLIO",
          "app.kubernetes.io/version": "{version:}",
          "environment": "scratch"
        },
        "namespace": "{global:namespace}"
      },
      "spec": {
        "containers": [
          {
            "args": "[CONTAINER_ARGS]",
            "env": "[ENVIRONMENT]",
            "envFrom": "[ENV_FROM]",
            "image": "[CONTAINER_IMAGE]",
            "imagePullPolicy": "[CONTAINER_IMAGE_PULL_POLICY]",
            "imagePullSecrets": "[CONTAINER_IMAGE_PULL_SECRETS]",
            "name": "{name:}",
            "ports": "[CONTAINER_PORTS]",
            "readinessProbe": "[READINESS_PROBE]",
            "resources": "[RESOURCES]",
            "volumeMounts": "[VOLUME_MOUNTS]"
          },
          {
            "args": "[SIDECAR_ARGS]",
            "env": "[SIDECAR_ENVIRONMENT]",
            "envFrom": "[SIDECAR_ENV_FROM]",
            "image": "[SIDECAR_IMAGE]",
            "imagePullPolicy": "[SIDECAR_IMAGE_PULL_POLICY]",
            "imagePullSecrets": "[SIDECAR_IMAGE_PULL_SECRETS]",
            "name": "[SIDECAR_NAME_VALUE]",
            "ports": "[SIDECAR_PORTS]",
            "resources": "[SIDECAR_RESOURCES]",
            "volumeMounts": "[SIDECAR_VOLUME_MOUNTS]"
          }
        ],
        "volumes": "[VOLUMES]"
      }
    }
  }
}
